{% comment %}
Required values
label: <string>
______________
Optional values
href: <string>
type: <string>
style: <string>
class: <string>
attribute: <string>
{% endcomment %}

{% if label != blank %}
  {% if type == "link" %}
    <a {% if href != blank %}href="{{ href }}"{% endif %} style="background-color:{{ bg_color }}" class="button {{ style }} {{ class }}" {{ attribute }}>{{ label }}</a>
  {% else %}
    <button type="{{ type }}" class="button {{ style }} {{ class }}" {{ attribute }}>{{ label }}</button>
  {% endif %}
{% endif %}
